{
	"multipart": [
		{
			"when": { "lefty": false, "forwardly": false },
			"apply": { "model": "railwayp:pfglass_post" }
		},
		{
			"when": { "lefty": true, "forwardly": false },
			"apply": { "model": "railwayp:pfglass_post", "y": 90 }
		},
				{
			"when": { "lefty": false, "forwardly": true },
			"apply": { "model": "railwayp:pfglass_post", "y": 270 }
		},
				{
			"when": { "lefty": true, "forwardly": true },
			"apply": { "model": "railwayp:pfglass_post", "y": 180 }
		},
		
		{
			"when": { "OR": [
				{ "lefty":false, "forwardly": false, "north": true },
				{ "lefty":false, "forwardly": true, "south": true }
			] },
			"apply": { "model": "railwayp:pfglass_side_plate" }
		},
		{
			"when": { "OR": [
				{ "lefty":false, "forwardly": false, "west": true },
				{ "lefty":true, "forwardly": false, "east": true }
			] },
			"apply": { "model": "railwayp:pfglass_side_plate", "y": 90 }
		},
				{
			"when": { "OR": [
				{ "lefty":true, "forwardly": false, "north": true },
				{ "lefty":true, "forwardly": true, "south": true }
			] },
			"apply": { "model": "railwayp:pfglass_side_plate", "y": 180 }
		},
				{
			"when": { "OR": [
				{ "lefty":false, "forwardly": true, "west": true },
				{ "lefty":true, "forwardly": true, "east": true }
			] },
			"apply": { "model": "railwayp:pfglass_side_plate", "y": 270 }
		}
    ]
}
