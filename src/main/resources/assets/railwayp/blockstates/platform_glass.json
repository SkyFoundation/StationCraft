{
	"multipart": [
        {   "apply": { "model": "railwayp:pfglass_post" }},
        {   "when": { "north": true },
            "apply": { "model": "railwayp:pfglass_side" }
        },
        {   "when": { "east": true },
            "apply": { "model": "railwayp:pfglass_side", "y": 90 }
        },
        {   "when": { "south": true },
            "apply": { "model": "railwayp:pfglass_side_alt" }
        },
        {   "when": { "west": true },
            "apply": { "model": "railwayp:pfglass_side_alt", "y": 90 }
        },
        {   "when": { "north": false },
            "apply": { "model": "railwayp:pfglass_noside" }
        },
        {   "when": { "east": false },
            "apply": { "model": "railwayp:pfglass_noside_alt" }
        },
        {   "when": { "south": false },
            "apply": { "model": "railwayp:pfglass_noside_alt", "y": 90 }
        },
        {   "when": { "west": false },
            "apply": { "model": "railwayp:pfglass_noside", "y": 270 }
        }
    ]
}
